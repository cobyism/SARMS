<h1>Enrollments for <%= @user.full_name %></h1>

<%= link_to 'New Enrollment', new_user_enrollment_path(@user) %>

<table>
  <tr>
    <th>User</th>
    <th>Unit</th>
	<th>Date Enrolled</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @enrollments.each do |enrollment| %>
  <tr>
    <td><%= enrollment.user_name %></td>
    <td><%= enrollment.unit_code %> &ndash; <%= enrollment.unit_name %></td>
	<td><%= enrollment.created_at.to_date %></td>
    <td><%= link_to 'Show', enrollment %></td>
    <td><%= link_to 'Edit', edit_enrollment_path(enrollment) %></td>
    <td><%= link_to 'Destroy', enrollment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>