<!DOCTYPE HTML>
<html lang="en-US">
<head>
	<title>SARMS</title>
	<meta charset="UTF-8">
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-23721182-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>    
</head>
<body>
	<div id="page">
		<div id="header" class="section">
			<div class="wrap container">
				<div id="branding" class="grid7 first">
					<h1>SARMS</h1>
					<p>Student At-Risk Monitoring System</p>
				</div>
                <% if current_user%>
					<% content_for :sidebar do %>
						<h2>My Account</h2>
						<dl>
							<dt>Signed in as</dt>
							<dd><%= current_user.full_name %></dd>
							<dt>Email</dt>
							<dd><%= current_user.email %></dd>
							<dt>Role</dt>
							<dd><%= current_user.role %></dd>
						</dl>
						<% if current_user.is_admin? %>
							
						<% elsif current_user.is_faculty? %>
							
						<% elsif current_user.is_student? %>
							
						<% end %>
						<%= link_to "View Details", user_path(current_user), :class => :button %>
						<%= link_to "Sign out", sign_out_path, :class => :button %>
					<% end %>
                <% end %>
			</div>
		</div>
        <% if current_user%>
		<div id="nav" class="section">
			<div class="wrap container">
				<div class="grid2 first">
                  <div class="navitem <%= current_if('dashboard') %>"><%= link_to "Dashboard", root_path %></div>
				</div>
				<div class="grid2">
					<% if current_user.is_admin? %>
						<div class="navitem <%= current_if('users') %>"><%= link_to "Users", users_path %></div>
					<% else %>
						<div class="navitem <%= current_if('my_account') %>"><%= link_to "My Account", user_path(current_user) %></div>
					<% end %>
				</div>
				<div class="grid2">
					<% if current_user.is_admin? %>
						<div class="navitem <%= current_if('units') %>"><%= link_to "Units", units_path %></div>
					<% elsif current_user.is_faculty? %>
						<div class="navitem <%= current_if('units') %>"><%= link_to "Units", user_faculty_assignments_path(current_user) %></div>
					<% elsif current_user.is_student? %>
						<div class="navitem <%= current_if('units') %>"><%= link_to "Units", user_enrollments_path(current_user) %></div>
					<% end %>
				</div>
				<div class="grid2">
					<% if current_user.is_staff? %>
						<div class="navitem <%= current_if('at_risk_events') %>"><%= link_to "Students At-Risk", at_risk_events_path %></div>
					<% end %>
				</div>
			</div>
		</div>
      <% end %>
		<div id="main" class="section">
			<div id="flash" class="wrap container">
              <% flash.each do |name, msg| %>
                <%= content_tag :div, msg, :id => "flash_#{name}", :class => "flash #{name}" %>
              <% end %>
			</div>
			<div class="wrap container">
				<% if content_for?(:sidebar) %>
					<div id="primary" class="grid8 first">
						<div class="padding">
							<%= yield %>
						</div>
                	</div>
					<div id="secondary" class="grid4">
						<div class="padding">
							<%= yield(:sidebar) %>
						</div>
                	</div>
				<% else %>
					<div id="primary" class="grid12 first">
						<div class="padding">
							<%= yield %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
		<div id="footer" class="section">
			<div class="wrap container">
				<div id="blurb" class="grid8 first">
					<p><span xmlns:dct="http://purl.org/dc/terms/" href="http://purl.org/dc/dcmitype/InteractiveResource" property="dct:title" rel="dct:type">SARMS</span> was created by <span xmlns:cc="http://creativecommons.org/ns#" property="cc:attributionName">Coby Chapple, Lee Manuele, Fin McCarthy</span> for SIT321 at Deakin University, and is licensed under a <a rel="license" href="http://creativecommons.org/licenses/by-nc-nd/3.0/">Creative Commons License</a>. Full source code available <a href="https://github.com/cobychapple/SARMS">here</a>.</p>
				</div>
				<div id="legal" class="grid4">
					<p>All content is copyright &copy; 2011&mdash;Coby Chapple, Lee Manuele, and Fin McCarthy.<br /><a rel="license" href="http://creativecommons.org/licenses/by-nc-nd/3.0/"><img alt="Creative Commons License" style="border-width:0" src="http://i.creativecommons.org/l/by-nc-nd/3.0/80x15.png" /></a></p>
				</div>
			</div>
		</div>
      </div>
