<div class="trb">
	<%= link_to 'New Unit', new_unit_path, :class => :button %>
</div>

<h1>Units</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Trimester</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @units.each do |unit| %>
  <tr>
    <td><%= unit.code %></td>
    <td><%= unit.name %></td>
	<td><%= "Trimester #{unit.term}, #{unit.begins_at.year}" %></td>
    <td><%= link_to 'Show', unit %></td>
    <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
    <td><%= link_to 'Destroy', unit, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

