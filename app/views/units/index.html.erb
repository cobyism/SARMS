<h1>Listing units</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Begins at</th>
    <th>Ends at</th>
    <th>Term</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @units.each do |unit| %>
  <tr>
    <td><%= unit.code %></td>
    <td><%= unit.name %></td>
    <td><%= unit.begins_at %></td>
    <td><%= unit.ends_at %></td>
    <td><%= unit.term %></td>
    <td><%= link_to 'Show', unit %></td>
    <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
    <td><%= link_to 'Destroy', unit, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

