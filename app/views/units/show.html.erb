<h1><%= @unit.full_name %></h1>
<p>
	<%= @unit.trimester %> | 
	<%= link_to 'Edit Unit', edit_unit_path(@unit) %> |
	<%= link_to 'View All', units_path %>
</p>

<h2>Activities</h2>
<p><%= link_to "New Activity", new_unit_activity_path(@unit) %></p>

<table>
  <tr>
    <th>Name</th>
    <th>Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @unit.activities.each do |activity| %>
  <tr>
    <td><%= activity.name %></td>
    <td><%= activity.date.to_date %></td>
    <td><%= link_to 'Show', activity %></td>
    <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
    <td><%= link_to 'Destroy', activity, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


<h2>Assessments</h2>
<p><%= link_to "New Assessment", new_unit_assessment_path(@unit) %></p>

<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Due at</th>
    <th>Total marks</th>
    <th>Weight</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @unit.assessments.each do |assessment| %>
  <tr>
    <td><%= assessment.name %></td>
    <td><%= assessment.category %></td>
    <td><%= assessment.due_at %></td>
    <td><%= assessment.total_marks %></td>
    <td><%= assessment.weight %></td>
    <td><%= link_to 'Show', assessment %></td>
    <td><%= link_to 'Edit', edit_assessment_path(assessment) %></td>
    <td><%= link_to 'Destroy', assessment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>