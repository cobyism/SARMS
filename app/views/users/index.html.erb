<div class="trb">
	<%= link_to 'New User', new_user_path, :class => :button %>
</div>

<h1><%= @title %></h1>

<table>
	<% @users.each do |user| %>
	<tr class='separator'>
		<td>
			<%= link_to user.full_name, user %>
		</td>
		<td>
			<%= user.role %>
			<% if !user.is_active %>
				[<%= user.status %>]
			<% end %>
		</td>
		<td class="actions">
			
			<% if user.id != current_user.id %>
				<%= link_to 'Edit', edit_user_path(user), :class => :button %>
				<%= link_to 'Delete', user, :confirm => 'Are you sure?', :method => :delete, :class => :button %>
			<% else %>
				That&rsquo;s you!
				<%= link_to 'Edit', edit_user_path(user), :class => :button %>
		    <% end %>
		</td>
	</tr>
	<% end %>
</table>

<%= will_paginate @users %>

<%= render :partial => 'index_sidebar' %>
