<div class="trb">
	<%= link_to 'New User', new_user_path, :class => :button %>
</div>

<h1><%= @title %></h1>

<table>
	<% @users.each do |user| %>
	<tr class='separator'>
		<td>
			<%= link_to user.full_name, user %>
		</td>
		<td>
			<%= user.role %>
			<% if !user.is_active %>
				[<%= user.status %>]
			<% end %>
		</td>
		<td class="actions">
			
			<% if user.id != current_user.id %>
				<%= link_to 'Edit', edit_user_path(user), :class => :button %>
				<%= link_to 'Delete', user, :confirm => 'Are you sure?', :method => :delete, :class => :button %>
			<% else %>
				That&rsquo;s you!
		    <% end %>
		</td>
	</tr>
	<% end %>
</table>

<% content_for :sidebar do %>
	<h2>Filter Users</h2>
	<ul>
		<li><%= link_to "All Users", users_path %></li>
		<li><%= link_to "Students", users_path(:scope => "students") %></li>
		<li><%= link_to "Faculty", users_path(:scope => "faculty") %></li>
		<li><%= link_to "Administrators", users_path(:scope => "admins") %>	</li>
	</ul>
<% end %>